# Payo Backend - Environment Configuration

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost/payo_db

# External API Keys (Optional)
COINGECKO_API_KEY=your_coingecko_api_key_here
BASESCAN_API_KEY=your_basescan_api_key_here

# Webhook Configuration
WEBHOOK_SECRET_KEY=your_webhook_secret_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Blockchain Configuration
# BTC Lightning (for future LND/CLN integration)
LND_RPC_HOST=localhost
LND_RPC_PORT=10009
LND_MACAROON_PATH=/path/to/macaroon
LND_TLS_CERT_PATH=/path/to/tls.cert

# Exchange Rate Cache (seconds)
EXCHANGE_RATE_CACHE_TTL=300

# Invoice Configuration
INVOICE_EXPIRY_HOURS=24
INVOICE_CHECK_INTERVAL=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
